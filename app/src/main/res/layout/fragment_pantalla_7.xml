<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".pantalla_7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/todo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="86dp"
                android:layout_height="77dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.07999998"
                app:srcCompat="@drawable/ic_image_black" />

            <Button
                android:id="@+id/bt_login_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Buscas trabajo?"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:layout_constraintVertical_bias="0.04000002" />

            <TextView
                android:id="@+id/tv_login_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Las mejores ofertas laborales te estan esperando!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_login_usuario"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/bt_login_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Eres una empresa?"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_login_usuario"
                app:layout_constraintVertical_bias="0.060000002" />

            <TextView
                android:id="@+id/tv_login_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dejanos ayudarte a encontrar los mejores profesionales."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_login_empresa"
                app:layout_constraintVertical_bias="0.07999998" />

            <Button
                android:id="@+id/bt_iniciar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_login_empresa"
                app:layout_constraintVertical_bias="0.120000005" />

            <TextView
                android:id="@+id/tv_iniciar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes cuenta?"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_iniciar_sesion"
                app:layout_constraintVertical_bias="0.060000002" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</layout>