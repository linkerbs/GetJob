<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edenilson.get_job">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PdfActivity"></activity>
        <!-- Aqui inicialiso la app porque lo primero que va a cargar es la pantalla de splash -->
        <activity
            android:name=".splash_start"
            android:theme="@style/splash_start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CompanyActivity" />
        <activity android:name=".UserActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>